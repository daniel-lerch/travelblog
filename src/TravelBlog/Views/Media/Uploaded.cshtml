@model MediaUploadViewModel
@{
    // .NET 6 does not allow to enforce callers to pass a view model:
    // https://github.com/dotnet/aspnetcore/issues/37510
    if (Model is null) throw new ArgumentNullException(nameof(Model));

    ViewData["Title"] = "Upload Zusammenfassung";
}

<h1>Upload Zusammenfassung</h1>

<ul class="list-group mt-3 mb-3">
    @foreach (var file in Model.Files)
    {
        if (file.success)
        {
            <li class="list-group-item list-group-item-success">Erfolgreich: @file.name</li>
        }
        else
        {
            <li class="list-group-item list-group-item-danger">Fehlgeschlagen: @file.name</li>
        }
    }
</ul>

<a href="~/media" class="btn btn-primary">Weiter</a>
