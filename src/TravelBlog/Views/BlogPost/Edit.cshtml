@model PostViewModel
@{
    ViewData["Title"] = "Post bearbeiten";
}

<h1>Post bearbeiten</h1>

<form action="~/post/@Model.Post.Id/edit" method="post">
    <div class="form-group">
        <label for="title">Titel</label>
        <input type="text" class="form-control" id="title" name="title" value="@Model.Post.Title" autocomplete="off" />
    </div>
    <div class="form-group">
        <label for="content">Inhalt</label>
        <textarea class="form-control" id="content" name="content" rows="10" aria-describedby="contentHelp">@Model.Post.Content</textarea>
        <small class="form-text text-muted" id="contentHelp">Du kannst hier Markdown zur Formatierung verwenden.</small>
    </div>
    @if (Model.Post.PublishTime == default)
    {
        <button type="submit" class="btn btn-secondary">Entwurf speichern</button>
        <button type="submit" formaction="~/post/@Model.Post.Id/publish" class="btn btn-primary">Posten</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Aktualisieren</button>
    }
</form>
