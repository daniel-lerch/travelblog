
@{ 
    ViewData["Title"] = "Create post";
}

<h1>Create post</h1>

<form action="" method="post">
    <div class="form-group">
        <label for="title">Titel</label>
        <input type="text" class="form-control" id="title" name="title" autocomplete="off" />
    </div>
    <div class="form-group">
        <label for="content">Inhalt</label>
        <textarea class="form-control" id="content" name="content" rows="10" aria-describedby="contentHelp"></textarea>
        <small class="form-text text-muted" id="contentHelp">Du kannst hier Markdown zur Formatierung verwenden.</small>
    </div>
    <button type="submit" class="btn btn-primary">Posten</button>
</form>
