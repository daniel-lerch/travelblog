
@{ 
    ViewData["Title"] = "Post erstellen";
}

<h1>Post erstellen</h1>

<form action="~/post/create" method="post" id="dangerous-form">
    <div class="form-group">
        <label for="title">Titel</label>
        <input type="text" class="form-control" id="title" name="title" required autocomplete="off" />
    </div>
    <div class="form-group">
        <label for="content">Inhalt</label>
        <textarea class="form-control" id="content" name="content" rows="10" aria-describedby="contentHelp"></textarea>
        <small class="form-text text-muted" id="contentHelp">
            Du kannst hier <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a> zur Formatierung verwenden.
        </small>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="listed" name="listed" checked="checked" value="true" />
        <label for="listed" class="form-check-label">Post in der Übersicht anzeigen</label>
    </div>
    <button type="submit" formaction="~/post/draft" class="btn btn-secondary">Entwurf speichern</button>
    <button type="button" onclick="if ($('#dangerous-form').get(0).reportValidity()) { $('#confirm-submit').modal() }" class="btn btn-primary">Posten</button>
</form>

